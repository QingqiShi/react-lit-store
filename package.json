{
  "name": "react-lit-store",
  "version": "1.0.0",
  "description": "⚡️ A lightweight state management tool for React.js",
  "main": "lib/index.es.js",
  "types": "lib/index.d.ts",
  "module": "lib/index.es.js",
  "scripts": {
    "build": "mkdirp lib && npm run build-commonjs && npm run build-es && tsc --declaration",
    "build-commonjs": "babel src/index.tsx --extensions '.tsx' --presets=@babel/preset-env > lib/index.js",
    "build-es": "babel src/index.tsx --extensions '.tsx' > lib/index.es.js",
    "test": "jest",
    "commit": "git-cz",
    "version": "standard-version --preset angular"
  },
  "author": "Qingqi Shi <qingqishi@live.com> (https://qingqi.dev)",
  "repository": {
    "type": "git",
    "url": "https://github.com/QingqiShi/react-lit-store.git"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "reactjs",
    "redux",
    "context",
    "store"
  ],
  "peerDependencies": {
    "react": "^16.8.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^8.0.9",
    "@types/jest": "^24.0.18",
    "@types/react": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "babel-preset-minify": "^0.5.1",
    "codecov": "^3.5.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "mkdirp": "^0.5.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "standard-version": "^7.0.0",
    "typescript": "^3.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
