{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "./lib",
    "outDir": "./lib"
  },
  "include": ["src"],
  "exclude": ["src/*.spec.tsx"]
}
